---
import BaseLayout from "./BaseLayout.astro";
import { Icon } from "astro-icon"

const { frontmatter } = Astro.props;
---
<BaseLayout>
    <div class="flex flex-col">
    <a class="flex flex-row mono italic mb-3" href="../../">
            <Icon class="mt-1 w-5 h-5 mr-1" name="ic:sharp-keyboard-return"/>return
        </a>
        <h1 class="text-3xl font-bold">{frontmatter.title}</h1>
        <p>{frontmatter.pubDate.slice(0,10)}</p>
        <p class="text-slate-300 italic">{frontmatter.description}</p>

        <div class="prose mt-8 text-white prose-h1:text-2xl ">
            <slot />
        </div>
        
    </div>
    
</BaseLayout>

