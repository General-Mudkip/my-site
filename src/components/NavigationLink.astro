---
const { name, href} = Astro.props;

const currentPath = Astro.url.pathname;

const strippedPath = currentPath.replace("/", "");
const strippedHref = href.replace("/", "");

const pathContainsHref = strippedPath.includes(strippedHref) && strippedHref !== "";
const pathIsHome = strippedPath === "";

const isActive = pathContainsHref || (pathIsHome && name==="./home")
---

<a class={`block p-2 text-xl ${isActive ? "text-white underline decoration-2" : "text-slate-300 hover:underline hover:decoration-2"} transition-all duration-200`} href={href}>
    {name}
</a>